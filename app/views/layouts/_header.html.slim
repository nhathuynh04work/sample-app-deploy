header.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
  .container
    = link_to "sample app", root_path, id: "logo", class: "navbar-brand"
    button.navbar-toggler type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation"
      span.navbar-toggler-icon
    #navbarCollapse.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item = link_to "Home", root_path, class: "nav-link"
        li.nav-item = link_to "Help", help_path, class: "nav-link"
        - if logged_in?
          li.nav-item = link_to "Users", users_path, class: "nav-link"
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle href="#" data-bs-toggle="dropdown" Account
            ul.dropdown-menu
              li = link_to "Profile", current_user, class: "dropdown-item"
              li = link_to "Settings", edit_user_path(current_user), class: "dropdown-item"
              li: hr.dropdown-divider
              li = link_to "Log out", logout_path, class: "dropdown-item", data: { turbo_method: :delete }
        - else
          li.nav-item = link_to "Log in", login_path, class: "nav-link"